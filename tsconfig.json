{
    "compilerOptions": {
        "outDir": "lib",
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2017",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noEmitHelpers": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "../../node_modules"
    ]
}